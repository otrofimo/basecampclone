<h1>Gaze upon your trifling endeavors</h1>

<div>	
	<table class="table table-bordered table-striped">
		<tr>
			<th>
				Title
			</th>
			<th>
				<del>Pretentious</del> Private?
			</th>
		</tr>
		<%= render :partial => "project", :collection => @projects %> 
	</table>
</div>

<div class="form-inline">
	<%=form_for @project do |f|%>
		<%= f.text_field :title, :placeholder => "Add a project here..."%>
		<span class="checkbox inline">
		<%= f.check_box :clandestine %>
		<%= f.label "is this pretentious enough to be private?", :class => "inline" %>
		</span>
		<p style="margin-top: 10px"><%= f.submit "Fine" ,:class => "btn btn-danger"%></p>
	<%end%>
</div>