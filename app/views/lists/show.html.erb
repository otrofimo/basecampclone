<h1><%= @list.title %></h1>
<h3>Stop bothering me and do your work:</h3>
<div>	
	<table class="table table-bordered table-striped">
		<tr>
			<th>
				Task
			</th>
		</tr>
		<%= render :partial => "task", :collection => @tasks %>
	</table>
</div>
<div class="form-inline">
<%=form_for [@list,@task] do |f|%>
	<%= f.text_field :body, :placeholder => "Add a task here..."%>
	<p style="margin-top: 10px"><%= f.submit "Whatever", :class => "btn btn-danger"%></p>
<%end%>
